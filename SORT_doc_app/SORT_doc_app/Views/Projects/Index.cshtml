@{
    ViewBag.Title = "Index";
}

<h2>SORT Documents</h2>


    @using (Html.BeginForm("Index", "Projects", FormMethod.Get))
    {
        <p style="float:right">
            @Html.TextBox("SearchString", "", htmlAttributes: new { placeholder = "Search", style = " padding-left: 5px; height:37px; border: 1px solid #DFE1E3; border-radius: 5px;", }) <button type="submit" class="btn btn-default"><span class="glyphicon glyphicon-search"></span></button>
        </p>
